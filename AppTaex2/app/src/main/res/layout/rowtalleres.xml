<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv_talleres">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/taller_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:src="@drawable/ic_action_taller"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="2dp"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/taller_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textColor="#252525"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="TALLER: "
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/texto_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Estado: "
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="4dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/texto_nota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nota: "
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="4dp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/texto_dato_taller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="FotografÃ­a"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="4dp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/texto_dato_estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:text="Inscrito"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/texto_dato_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>