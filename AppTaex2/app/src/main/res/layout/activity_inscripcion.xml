<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InscripcionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="5dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Taller" />

        <EditText
            android:id="@+id/txt_inscripcion_tipo_taller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Taller" />

        <EditText
            android:id="@+id/txt_inscripcion_nombre_taller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/txt_mensajecosto"
            android:paddingTop="10dp"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/checkAceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inscripcion"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btn_inscribirse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_deep_orange2"
            android:text="Inscribirse" />


    </LinearLayout>

</LinearLayout>